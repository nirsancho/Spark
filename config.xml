<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns		= "http://www.w3.org/ns/widgets"
        xmlns:gap	= "http://phonegap.com/ns/1.0"
        id		= "com.spark.spark"
        version 	= "1.0.0"
        versionCode = "1">

    <name>Spark</name>

    <description>
    </description>

    <author href=""
            email="">
    </author>

    <preference name="phonegap-version" value="3.6.3" />
    <preference name="orientation" value="portrait" />

    <preference name="target-device" value="universal" />
    <preference name="fullscreen" value="false" />
    <preference name="webviewbounce" value="true" />
    <preference name="ios-statusbarstyle" value="black-opaque" />

    <preference name="disable-cursor" value="true" />

    <icon src="icons/Icon-72.png" gap:role="default" />

    <icon src="icons/Icon-72.png" gap:platform="ios" width="72" height="72" />
    <icon src="icons/Icon-72@2x.png" width="114" height="114" />

    <icon src="icons/Icon-36.png" gap:platform="android" gap:density="ldpi" />
    <icon src="icons/Icon-48.png" gap:platform="android" gap:density="mdpi" />
    <icon src="icons/Icon-72.png" gap:platform="android" gap:density="hdpi" />

    <icon src="icons/Icon-72.png" gap:platform="blackberry" />

    <gap:plugin name="org.apache.cordova.contacts" version="0.2.13" />
    <gap:plugin name="org.apache.cordova.dialogs" version="0.2.10" />
    <gap:plugin name="com.vliesaputra.deviceinformation" version="1.0.1" />
    <gap:plugin name="org.li8.inappbrowser" version="0.1" />

